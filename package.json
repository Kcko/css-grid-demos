{
  "name": "polaroid-example",
  "version": "0.5.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/machal/polaroid-example.git"
  },
  "contributors": [
    {
      "name": "Martin Mich√°lek"
    }
  ],
  "devDependencies": {
    "autoprefixer": "^9.4.3",
    "browser-sync": "^2.26.3",
    "npm-run-all": "^4.1.5",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.1.0",
    "postcss": "^7.0.7"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "scripts": {
    "browsersync": "browser-sync start --server --files 'dist/css/*.css'",
    "autoprefixer": "postcss src/css --use autoprefixer --grid=true --dir dist/css",
    "build:css": "run-s autoprefixer",
    "watch:css": "onchange 'dist/css/*.css' -- run-s build:css",
    "watch": "run-p browsersync watch:*",
    "start": "run-s build:* watch"
  }
}
